{
  "name": "entry-uploader",
  "version": "1.0.0",
  "scripts": {
    "build": "parcel build ./manifest.json --target webext-prod",
    "watch": "parcel watch ./manifest.json --host localhost --target webext-dev"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "license": "MIT",
  "devDependencies": {
    "@parcel/config-webextension": "^2.4.0",
    "parcel": "^2.4.0",
    "parcel-reporter-web-ext": "^0.3.2",
    "typescript": "^4.6.3",
    "web-ext": "^6.7.0",
    "webextension-polyfill-ts": "^0.26.0"
  }
}